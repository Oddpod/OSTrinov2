<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_listScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtFilter"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/label_filter"
        android:inputType="textPersonName"
        android:textColor="#f100"
        android:textCursorDrawable="@drawable/black" />

    <ListView
        android:id="@+id/lvOstList"
        android:layout_below="@id/edtFilter"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/flOntop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <Button
            android:id="@+id/btnStopPlayer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|start"
            android:background="@drawable/close"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnMovePlayer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:background="@android:drawable/ic_lock_lock"
            android:visibility="visible" />

    </FrameLayout>

</RelativeLayout>